@{
  Layout = "_Layout";
}

@using BakeryStatistics.Models;

<h3>Customer Details:</h3>
<br>
<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href="/customers/@Model["customer"].Id/orders/@order.Id">@order.Name</a></li>
    <li><a href="/customers/@Model["customer"].Id/orders/@order.Id">@order.OrderDetails</a></li>
    <li><a href="/customers/@Model["customer"].Id/orders/@order.Id">@order.Price</a></li>
    <li><a href="/customers/@Model["customer"].Id/orders/@order.Id">@order.Date</a></li>
  }
</ol>
<br>
<button type="button" class="btn btn-success" href="/customers/@Model["customer"].Id/orders/new">ADD NEW CUSTOMER</button>
<br>
<br>
<button type="button" class="btn btn-success" href="/customers/">CUSTOMER DATABASE</button>
<br>
