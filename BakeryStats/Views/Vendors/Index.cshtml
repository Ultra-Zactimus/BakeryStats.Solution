@{
  Layout = "_Layout";
}

@using BakeryStatistics.Models;

<h1>CLIENTS</h1>
<br>

@if (@Model.Count == 0)
{
  <h3>There are no Clients in your Database yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3>*<a href='/vendors/@vendor.Id'>@vendor.Name</a>*</h3>
}

<form action="/" method="get">
  <button type="submit" class="btn btn-success" id="home-btn">HOME</button>
</form>