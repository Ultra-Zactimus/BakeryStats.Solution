@{
  Layout = "_Layout";
}

@using BakeryStatistics.Models;

<h1>Customers</h1>

@if (@Model.Count == 0)
{
  <h3>There are no customers in your Database Pierre!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Customer</a></h3>
}

<br>
<form action="/" method="get">
<button class="btn btn success" type="submit">HOME</button>
</form>