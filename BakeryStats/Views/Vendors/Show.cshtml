@{
  Layout = "_Layout";
}

@using BakeryStatistics.Models;

<h3>Client Order Details:</h3>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>Order Details: |@order.OrderDetails| Price: |@order.Price|
        Month: |@order.Month| Day: |@order.Day| Year: |@order.Year|</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>ADD ANOTHER ORDER</a></p>
<p><a href='/vendors' method="get">DATABASE</a></p>
<p><a href="/">HOME</a></p>